---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import MainContent from "../../components/MainContent.astro";
import DropListContainer from "../../components/DropListContainer.astro";
import DropListItem from "../../components/DropListItem.astro";
import Aside from "../../components/Aside.astro";
import { ProductDataTable } from "../../components/preact/DataTable";
import {dev} from "../../lib/actions/crud-actions";

const sections = [
    {label: "Agregar producto", href: "/inventory/add"},
    {label: "Editar producto", href:"/inventory/edit"}
];
---
<Layout title="App - Inventory">
    <div class="flex items-center justify-center bg-amber-500">
		<Header />
	</div>
    <div class="flex mt-2">
		<Aside title="Acciones">
			<DropListContainer label="Producto">
				<DropListItem items={sections}></DropListItem>
			</DropListContainer>
		</Aside>
		<MainContent>
			<ProductDataTable 
				data={
					[{id: 0, name: "Cosas", stock: 10}, {id: 1, name: "Cosas", stock: 10, categoryId: 10}]
				}
				headers={
					[
						{label: "ID", entityProp: "id"},
						{label: "CategorÃ­a ID", entityProp: "categoryId"},
						{label: "Nombre", entityProp: "name"},
						{label: "Stock", entityProp: "stock"}
					]
				} client:load />
		</MainContent>
	</div>
</Layout>